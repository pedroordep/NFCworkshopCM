<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.its.workshopnfc" >

    <uses-permission android:name="android.permission.NFC" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".WriteTextActivity"
            android:label="@string/title_activity_write_text" >
        </activity>
        <activity
            android:name=".WriteURLActivity"
            android:label="@string/title_activity_write_url" >
        </activity>
        <activity
            android:name=".WriteApplicationActivity"
            android:label="@string/title_activity_write_application" >
        </activity>
    </application>

</manifest>
